// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id            String    @id @default(cuid())
    name          String
    role          UserRole  @default(USER)
    password      String
    email         String    @unique
    createdAt     DateTime  @default(now())
    updatedAt     DateTime?  @updatedAt
    campaigns     Campaign[]
}

model Campaign {
    id            String    @id @default(cuid())
    title         String
    description   String
    thumbnail     String
    status        CampaignStatus
    target        Int
    startDate    DateTime
    endDate      DateTime
    createdAt     DateTime  @default(now())
    updatedAt     DateTime?  @updatedAt
    news          News[]
    donations     Donation[]
    userId        String?
    user          User?      @relation(fields: [userId], references: [id], onDelete: SetNull)
}

model News {
    id            String    @id @default(cuid())
    title         String
    description   String
    thumbnail     String
    createdAt     DateTime  @default(now())
    updatedAt     DateTime?  @updatedAt
    campaignId    String
    campaign      Campaign  @relation(fields: [campaignId], references: [id])
}

model Donation {
    id            String    @id @default(uuid())
    status      DonationStatus @default(PENDING)
    amount        Int
    note          String?
    donorName     String
    donorEmail    String
    donorPhone    String
    paymentMethod String?
    paidAt        DateTime?
    createdAt     DateTime  @default(now())
    updatedAt     DateTime?  @updatedAt
    expiryDate    DateTime
    campaignId    String
    campaign      Campaign  @relation(fields: [campaignId], references: [id])
}

enum CampaignStatus {
    ACTIVE
    INACTIVE
    COMPLETED
}

enum DonationStatus {
    PENDING
    PAID
    CANCELLED
    EXPIRED
}

enum UserRole {
    ADMIN
    USER
}